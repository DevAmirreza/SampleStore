@model IEnumerable<AYadollahibastani_C50_A03.Models.Product>
@{
    ViewBag.Title = "Today's Shopping List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="btnCreate">@*It will be loaded from server*@</div>
<div class="centerit">
    <h2>@ViewBag.Title</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
                    @*@Html.Action("Delete" , new { id = item.Id})*@
                    @Html.Hidden("DeleteId", item.Id)
                    <button class="btn btn-danger btnDelete" value=@Html.Raw(item.Id )>Delete</button>
                </td>
            </tr>
        }
    </table>

    <div id="deleteConfirmation"></div>

</div>
